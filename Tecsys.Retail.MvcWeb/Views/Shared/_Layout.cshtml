@using Tecsys.Retail.MvcWeb.Models

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Styles/_Layout.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    @{
        LayoutModel layoutModel = new LayoutModel();
    }

</head>
<body style="padding:5px">

    @Html.AntiForgeryToken()

    @{Html.RenderAction("LayoutHeader", "System", layoutModel);}

    <div class="container body-content">

        @RenderBody()


        <footer style="bottom:0;position: fixed; width:100%;margin:0px;">
            <hr />
            <p>&copy; @DateTime.Now.Year - TecSystem Assessment</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

<script type="text/javascript">

</script>

</body>
</html>
